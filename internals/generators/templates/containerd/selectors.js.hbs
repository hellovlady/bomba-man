import { createSelector } from 'reselect';
import { initialState } from './reducer';
import { KEY } from './constants';

// Direct selector to the {{camelCase name}} state
const select{{properCase name}} = state => state[KEY] || initialState;

// Other specific selectors

{{#if wantAsync}}
const makeSelectLoading = () =>
	createSelector(select{{properCase name}}, ({ loading }) => loading);

const makeSelectError = () =>
	createSelector(select{{properCase name}}, ({ error }) => error);

const makeSelectData = () =>
	createSelector(select{{properCase name}}, ({ data }) => data);
{{else}}
// Default selector
const makeSelect{{properCase defaultStateName}} = () => 
	createSelector(select{{properCase name }}, ({ {{camelCase defaultStateName}} }) => {{ camelCase defaultStateName}});
{{/if}}

{{#if wantAsync}}
export {
	makeSelectLoading,
	makeSelectError,
	makeSelectData,
};
{{else}}
export { makeSelect{{properCase name}} };
{{/if}}
export default select{{properCase name}};
